<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shine_style" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_shine_style</item>
        <item name="popupMenuStyle">@style/PopupMenu.Shine_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Shine_style</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Shine_style</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Shine_style</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Shine_style</item>
        <item name="actionModeBackground">@drawable/cab_background_top_shine_style</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_shine_style</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Shine_style</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabText.Rosenormal</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="ActionBar.Solid.Shine_style" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_shine_style</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_shine_style</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_shine_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Shine_style</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar.Text"
     parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBar.Transparent.Shine_style" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_shine_style</item>
        <item name="progressBarStyle">@style/ProgressBar.Shine_style</item>
        <item name="android:textColor">#FFFF</item>
    </style>
	
    <style name="PopupMenu.Shine_style" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_shine_style</item>	
    </style>
	
    <style name="DropDownListView.Shine_style" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_shine_style</item>
    </style>

    <style name="ActionBarTabStyle.Shine_style" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_shine_style</item>
    </style>

    <style name="ActionBarTabText.Rosenormal" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="DropDownNav.Shine_style" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_shine_style</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_shine_style</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_shine_style</item>
    </style>
    
    <style name="ProgressBar.Shine_style" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_shine_style</item>
    </style>
    
    <style name="ActionButton.CloseMode.Shine_style" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_shine_style</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Shine_style.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Shine_style</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Shine_style</item>
    </style>

</resources>